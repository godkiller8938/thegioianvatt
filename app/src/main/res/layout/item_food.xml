<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearlayotFood"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/cardviewFood"
        app:cardCornerRadius="4dp"
        app:cardBackgroundColor="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/imgvFood"
                android:adjustViewBounds="true"
                android:layout_margin="2dp"
                android:layout_width="100dp"
                android:layout_height="100dp"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/textViewNameLaptop"
                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:layout_margin="5dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:text="mot hai ba bon nam sau bay tam chin muoi muoimot muoihai muoiba muoibon muoilam"
                    tools:layout_editor_absoluteY="76dp"
                    tools:layout_editor_absoluteX="0dp"
                    tools:ignore="EllipsizeMaxLines" />
                <TextView
                    android:id="@+id/textViewPriceFood"
                    android:text="Giá: "
                    android:layout_marginLeft="5dp"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="#FF0000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/textViewDescriptionLaptop"
                    android:text="Giá: "
                    android:layout_margin="5dp"
                    android:textSize="16dp"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>